<%- include('./partials/header') %>
<main>
    <% if (coffeeByCharact.length > 0) { %>
        <h2 class="h2Category">Caractéristique : <%= coffeeByCharact[0].characteristic %></h2>
      <% } %>
    
 
<section class="articles">
    <% coffeeByCharact.forEach(coffee => { %>
        
    <article>
        <img src="<%= coffee.picture %>" alt="<%= coffee.name %>">
        <h3><%= coffee.name %></h3>
        <a  href="/detail/<%= coffee.id %>">Voir le détail</a>
    </article>
    <% }) %>
    </section>
    <a class="btnCatalog" href="/catalogue/coffees">Voir tout le catalogue</a>

    </main>




<%- include('./partials/footer') %>